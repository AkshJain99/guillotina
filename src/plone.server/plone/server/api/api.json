{
    "methods": {
        "PUT": "plone.server.interfaces.IPUT",
        "POST": "plone.server.interfaces.IPOST",
        "PATCH": "plone.server.interfaces.IPATCH",
        "DELETE": "plone.server.interfaces.IDELETE",
        "GET": "plone.server.interfaces.IGET",
        "OPTIONS": "plone.server.interfaces.IOPTIONS"
    },
    "layer": "plone.server.api.layer.IDefaultLayer",
    "default_permission": "zope.Public",
    "renderers": {
        "application/json": "plone.server.renderers.IRendererFormatJson",
        "text/html": "plone.server.renderers.IRendererFormatHTML",
        "*/*": "plone.server.renderers.IRendererFormatRaw"
    },
    "languages": {
        "en": "plone.server.languages.IEN",
        "en-us": "plone.server.languages.IENUS",
        "ca": "plone.server.languages.ICA"
    },
    "contenttypes": {
        "plone.server.interfaces.IDataBase": {
            "POST": {
                "factory": "plone.server.api.portal.DefaultPOST",
                "permission": "plone.AddPortal"
            },
            "GET": {
                "factory": "plone.server.api.portal.DefaultGET",
                "permission": "plone.GetPortals"
            }
        },
        "plone.server.interfaces.IApplication": {
            "PUT": {
                "factory": "plone.server.api.portal.DefaultPUT",
                "permission": "plone.AddPortal"
            },
            "GET": {
                "factory": "plone.server.api.portal.DefaultGET",
                "permission": "plone.GetPortals"
            }
        },
        "plone.server.interfaces.IStaticFile": {
            "GET": {
                "factory": "plone.server.api.file.DefaultGET",
                "permission": "plone.AccessContent"
            }
        },
        "plone.server.interfaces.IPloneSite": {
            "endpoints": {
                "@registry": {
                    "GET": {
                        "factory": "plone.server.api.registry.Read",
                        "permission": "plone.AccessContent"
                    },
                    "PATCH": {
                        "factory": "plone.server.api.registry.Write",
                        "permission": "ModifyContent"
                    }
                },
                "@types" : {
                    "GET": {
                        "factory": "plone.server.api.types.Read",
                        "permission": "plone.AccessContent"
                    }
                }
            },
            "DELETE": {
                "factory": "plone.server.api.portal.DefaultDELETE",
                "permission": "plone.DeletePortals"                
            }
        },
        "plone.dexterity.interfaces.IDexterityContent": {
            "GET": {
                "factory": "plone.server.api.dexterity.DefaultGET",
                "permission": "plone.ViewContent"
            },
            "PATCH": {
                "factory": "plone.server.api.dexterity.DefaultPATCH",
                "permission": "plone.ModifyContent"
            },
            "PUT": {
                "factory": "plone.server.api.dexterity.DefaultPUT",
                "permission": "plone.ModifyContent"
            },
            "POST": {
                "factory": "plone.server.api.dexterity.DefaultPOST",
                "permission": "plone.AddContent"
            },
            "endpoints": {
                "sharing": {
                    "POST": {
                        "factory": "plone.server.api.dexterity.SharingPOST",
                        "permission": "plone.ViewContent"
                    }
                }
            },
            "DELETE": {
                "factory": "plone.server.api.dexterity.DefaultDELETE",
                "permission": "plone.DeleteContent"
            },
            "OPTIONS": {
                "factory": "plone.server.api.dexterity.DefaultOPTIONS",
                "permission": "plone.AccessPreflight"
            }
        }
    },
    "version": 1
}
