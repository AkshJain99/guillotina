{
    "methods": {
        "GET": "plone.server.interfaces.IGET",
        "POST": "plone.server.interfaces.IPOST"
    },
    "layer": "plone.server.api.layer.IDefaultLayer",
    "default_permission": "plone.ViewContent",
    "contenttypes": {
        "plone.dexterity.interfaces.IDexterityContent": {
            "endpoints": {
                "@search": {
                    "GET": {
                        "factory": "plone.server.catalog.catalog.SearchGET"
                    }
                },
                "@reindex": {
                    "POST": {
                        "factory": "plone.server.catalog.catalog.ReindexPOST",
                        "permission": "plone.ReindexContent"
                    }
                }
            }
        }
    },
    "version": 1
}