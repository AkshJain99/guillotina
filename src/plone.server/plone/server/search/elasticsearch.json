{
  "utility": "plone.server.search.elasticsearch.ElasticSearchUtility",
  "settings": {
    "connection_settings": {
      "endpoints": ["localhost:9200"],
      "sniffer_timeout": 0.5
    },
    "bulk_size": 50,
    "index_name": "plone",
    "doc_type": "plone",
    "mapping": {
      "title": {
        "type": "string",
        "index": "analyzed"
      },
      "description": {
        "type": "string",
        "index": "analyzed"
      },
      "portal_type": {
        "type": "string",
        "index": "not_analyzed"
      },
      "path": {
        "type": "string",
        "index": "not_analyzed"
      }
    }
  }
}